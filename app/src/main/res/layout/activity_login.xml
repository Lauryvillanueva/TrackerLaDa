<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Login"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ScrollView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"


            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="56dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal" />

                <!--  Email Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>

                <!--  Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_input_email"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:passwordToggleContentDescription="Description"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/accent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/login_btn_forgot_password"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/login_input_password"
                    android:layout_below="@+id/login_input_password"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:text="Olvide contraseÃ±a"
                    android:textStyle="bold" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/login_btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_btn_forgot_password"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:text="Ingresar"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/login_layout_or"
                    android:layout_below="@+id/login_btn_login"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="#c4c8c9"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="OR"
                        android:textColor="@color/primary_text" />
                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="#c4c8c9"
                        android:layout_margin="5dp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/login_btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_layout_or"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="Registrarse"
                    android:textColor="@color/primary_text"
                    android:textSize="16dp" />

            </LinearLayout>
        </ScrollView>



    </RelativeLayout>



